@model DokumenWebApps.Models.Klasifikasi

@{
    ViewData["Title"] = "Edit";
}

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/Home/Index">Home Page</a>
    </li>
    <li class="breadcrumb-item active">Edit Klasifikasi</li>
</ol>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="KodeKlasifikasi" class="control-label"></label>
                <input asp-for="KodeKlasifikasi" class="form-control" />
                <span asp-validation-for="KodeKlasifikasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Induk" class="control-label"></label>
                <input asp-for="Induk" class="form-control" />
                <span asp-validation-for="Induk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <input asp-for="Level" class="form-control" />
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamaKlasifikasi" class="control-label"></label>
                <input asp-for="NamaKlasifikasi" class="form-control" />
                <span asp-validation-for="NamaKlasifikasi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uraian" class="control-label"></label>
                <textarea name="Uraian" cols="100" rows="5" class="form-control">@Model.Uraian</textarea>
                <span asp-validation-for="Uraian" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetensiAktif" class="control-label"></label>
                <input asp-for="RetensiAktif" class="form-control" />
                <span asp-validation-for="RetensiAktif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RetensiInaktif" class="control-label"></label>
                <input asp-for="RetensiInaktif" class="form-control" />
                <span asp-validation-for="RetensiInaktif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="StatusAktif" /> @Html.DisplayNameFor(model => model.StatusAktif)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
   
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
